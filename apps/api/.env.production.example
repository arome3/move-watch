# ===========================================
# MoveWatch API - Production Environment
# ===========================================

# Server
NODE_ENV=production
PORT=4000

# Database (Neon, Railway, or Supabase)
DATABASE_URL=postgresql://user:password@host:5432/movewatch?sslmode=require

# Redis (Upstash recommended for serverless)
# Option 1: Upstash REST API (recommended)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Option 2: Standard Redis URL
# REDIS_URL=redis://default:password@host:6379

# Frontend URL (your Vercel deployment)
FRONTEND_URL=https://movewatch.vercel.app

# Authentication
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
NEXTAUTH_URL=https://movewatch.vercel.app

# Secrets Encryption (for action secrets)
# Generate with: openssl rand -hex 32
SECRETS_ENCRYPTION_KEY=your-64-char-hex-key

# Movement Network Simulation Account
# This account needs MOVE tokens for transaction simulation
SIMULATION_ACCOUNT_ADDRESS=0x...
SIMULATION_ACCOUNT_PRIVATE_KEY=0x...

# Optional: Disable payments for hackathon demo
DISABLE_PAYMENTS=true

# Optional: OAuth Providers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
